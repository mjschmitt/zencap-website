# Error Tracking & Monitoring Configuration
# Copy relevant values to your .env.local file

# Sentry (Recommended for production error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-organization
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Error Alerting Configuration
ALERT_EMAIL_RECIPIENTS=devops@zencap.co,admin@zencap.co
ALERT_WEBHOOK_URL=https://your-monitoring-service/alerts
EXTERNAL_MONITORING_URL=https://api.pagerduty.com/incidents
EXTERNAL_MONITORING_API_KEY=your-pagerduty-or-opsgenie-key

# Logging Configuration
LOG_LEVEL=info # Options: debug, info, warn, error
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE=20MB
ENABLE_STRUCTURED_LOGGING=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1 # 10% of requests
CORE_WEB_VITALS_ENDPOINT=/api/analytics/web-vitals

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000 # 5 seconds
HEALTH_CHECK_INTERVAL=60000 # 1 minute

# Monitoring Database Tables (auto-created)
ENABLE_MONITORING_TABLES=true
MONITORING_DATA_RETENTION=90 # days

# Real-time Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
MICROSOFT_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/teams/webhook

# Critical Error Thresholds
CRITICAL_ERROR_RATE_THRESHOLD=5.0 # 5% error rate triggers alert
HIGH_MEMORY_USAGE_THRESHOLD=512 # MB
SLOW_RESPONSE_THRESHOLD=3000 # 3 seconds

# Infrastructure Monitoring
VERCEL_DEPLOYMENT_HOOKS=true
VERCEL_ANALYTICS_ID=your-vercel-analytics-id
ENABLE_DEPLOYMENT_NOTIFICATIONS=true

# Error Tracking Configuration
ERROR_TRACKING_ENABLED=true
ERROR_TRACKING_PROVIDER=sentry # Options: sentry, bugsnag, custom
ERROR_SAMPLE_RATE=1.0 # 100% error capture
ERROR_PERFORMANCE_SAMPLE_RATE=0.1 # 10% performance monitoring

# Custom Error Endpoint (fallback)
CUSTOM_ERROR_ENDPOINT=/api/errors
CUSTOM_METRICS_ENDPOINT=/api/monitoring/metrics

# Client-side Error Tracking
NEXT_PUBLIC_ERROR_TRACKING_ENABLED=true
NEXT_PUBLIC_ERROR_SAMPLE_RATE=1.0

# Build and Deployment Monitoring
BUILD_ID=${BUILD_ID} # Auto-populated by Vercel
VERCEL_ENV=${VERCEL_ENV} # Auto-populated by Vercel
VERCEL_GIT_COMMIT_SHA=${VERCEL_GIT_COMMIT_SHA} # Auto-populated by Vercel